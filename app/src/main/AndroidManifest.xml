<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.photoblog">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_for_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_for_app_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activties.ForgetPasswordActivity"
            android:parentActivityName=".Activties.LoginActivity"></activity>
        <activity
            android:name=".Activties.FriendActivity"
            android:parentActivityName=".Activties.MainActivity" />
        <activity
            android:name=".Activties.ViewBlogUserProfile"
            android:parentActivityName=".Activties.MainActivity" />
        <activity android:name=".Activties.PhotoView" />
        <activity
            android:name=".Activties.CommentActivity"
            android:parentActivityName=".Activties.MainActivity" />
        <activity
            android:name=".Activties.NewPostActivity"
            android:parentActivityName=".Activties.MainActivity" />
        <activity android:name=".Activties.SetupActivity" />
        <activity android:name=".Activties.RegisterActivity" />
        <activity
            android:name=".Activties.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activties.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.soundcloud.android.crop.CropImageActivity" />
    </application>

</manifest>